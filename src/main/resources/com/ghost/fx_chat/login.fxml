<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ghost.fx_chat.LoginController">
   <children>
      <Button fx:id="exitBtn" AnchorPane.topAnchor="5.0" AnchorPane.leftAnchor="5.0" text="Exit" styleClass="btn,btn-danger"/>
      <GridPane alignment="CENTER" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" />
         </columnConstraints>
         <Label text="Login" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
         <TextField fx:id="usernameField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <GridPane.margin>
               <Insets top="8.0" />
            </GridPane.margin></TextField>
         <PasswordField fx:id="passwordField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets top="8.0" />
            </GridPane.margin></PasswordField>

         <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <Button fx:id="loginButton" onAction="#LoginButtonClick" styleClass="btn,btn-primary" text="Login">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin></Button>
            <Button fx:id="goRegister" mnemonicParsing="false" styleClass="btn,btn-primary" text="Register" />
            <GridPane.margin>
               <Insets top="8.0" />
            </GridPane.margin>
         </HBox>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </children>
</AnchorPane>
